<%= form_for([@user,@user.comments.build]) do |f| %>
<div class="container">
    <div class="form-group">
  <%= f.label :author %><br>
  <%= f.text_field :author %><br>
    </div>
    <div class="form-group">
  <%= f.label :body %><br>
  <%= f.text_area :body, placeholder: "Write your comment", class: "form-control" %><br>
    </div>

    <div class="form-group">
      <%= f.submit "Submit comment", class: "btn btn-primary" %>
    </div>
</div>
<% end %>
